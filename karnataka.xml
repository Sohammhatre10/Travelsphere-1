<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:background="#D67804"
        tools:context=".MainActivity" android:id="@+id/Karnataka" android:layout_width="match_parent">
    <ImageView
            android:layout_width="196dp"
            android:layout_height="138dp" app:srcCompat="@drawable/img" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="4dp" app:layout_constraintHorizontal_bias="0.252"
            app:layout_constraintEnd_toStartOf="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.034"/>
    <Button
            android:text="Bengaluru"
            android:layout_width="147dp"
            android:layout_height="50dp" android:id="@+id/button"
            android:backgroundTint="#00BCD4"
            android:fontFamily="sans-serif-medium" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.091"/>
    <ImageView
            android:layout_width="210dp"
            android:layout_height="215dp" app:srcCompat="@drawable/img_1" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.075" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.338"/>
    <Button
            android:text="Mysuru"
            android:layout_width="145dp"
            android:layout_height="50dp" android:id="@+id/button2"
            android:backgroundTint="#00BCD4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.365"/>
    <ImageView
            android:layout_width="206dp"
            android:layout_height="133dp" app:srcCompat="@drawable/img_2" android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.073" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.715"/>
    <Button
            android:text="Hampi"
            android:layout_width="150dp"
            android:layout_height="52dp" android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.708"
            android:backgroundTint="#00BCD4"/>
</androidx.constraintlayout.widget.ConstraintLayout>
